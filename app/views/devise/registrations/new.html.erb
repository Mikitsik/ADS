<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: "email" %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, placeholder: "Name", required: 'required' %>
  </div>

  <div class="field">
    <%= f.label :surname %><br />
    <%= f.text_field :surname, placeholder: "Surname", required: 'required' %>
  </div>

  <div class="field">
    <h4>Who do you want to be?</h4>
    <h5>Choose your role:</h5>
    <p>(notice, you couldn't change it aferwards)</p>
    <div>
      <%= radio_button_tag(:role, "user", required: 'required') %>
      <%= label_tag(:role_user, "I want to be an User") %>
    </div>
    <div>
      <%= radio_button_tag(:role, "admin") %>
      <%= label_tag(:role_admin, "I want to be an Admin") %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, placeholder: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, placeholder: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-outline-primary" %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
