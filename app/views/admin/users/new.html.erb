<h3>Ad New User:</h3>

<%= form_with(model: @user, url: admin_users_path, method: :post) do |form| %>

  <div class="field">
    <%= form.label :email %><br />
    <%= form.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="">
    <%= form.label :name %><br />
    <%= form.text_field :name, autocomplete: "Name", required: 'required' %>
  </div>

  <div class="field">
    <%= form.label :surname %><br />
    <%= form.text_field :surname, autocomplete: "Surname", required: 'required' %>
  </div>

  <div class="field">
    <p>Role:</p>
    <div>
      <%= form.radio_button(:role, "guest") %>
      <%= form.label(:role_guest, "Guest") %>
    </div>
    <div>
      <%= form.radio_button(:role, "user", checked: true) %>
      <%= form.label(:role_user, "User") %>
    </div>
    <div>
      <%= form.radio_button(:role, "admin") %>
      <%= form.label(:role_admin, "Admin") %>
    </div>
  </div>

  <div class="field">
    <%= form.label :password %><br />
    <%= form.password_field :password, placeholder: "new-password", required: 'required' %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %><br />
    <%= form.password_field :password_confirmation, placeholder: "new-password", required: 'required' %>
  </div>

  <div class="actions mt-2">
    <%= form.submit "Add", class: "btn btn-outline-success" %>
  </div>
<% end %>

<div class="mt-1"><%= link_to 'Home page', root_path %></div>
